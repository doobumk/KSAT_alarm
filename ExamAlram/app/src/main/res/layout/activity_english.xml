<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9dd9f"

    tools:context="com.doobumk.kim.examalram.KSAT.KoreanActivity">

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="남은시간"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/english_ellapse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20sp"
        >
        <Button
            android:background="#ffb000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="전체 문제(70분)"
            android:id="@+id/english_entire"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>
        <Button
            android:background="#ffb000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="중간 시간 기록"
            android:id="@+id/english_record"
            android:layout_marginRight="10sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="파트 별 시간 측정"
        android:textSize="25sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp">
        <Button
            android:background="#ffb000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="듣기(25분)"
            android:id="@+id/english_listen"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginRight="10sp"/>
        <Button
            android:background="#ffb000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문법/독해(45분)"
            android:id="@+id/english_reading"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginRight="10sp"/>
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textSize="15sp"
            android:id="@+id/english_recordtext"/>
    </ScrollView>

</LinearLayout>
