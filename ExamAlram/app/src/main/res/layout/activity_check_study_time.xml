<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9dd9f"

    tools:context="com.doobumk.kim.examalram.STUDY.CheckStudyTimeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공부시간"
            android:gravity="center"
            android:textSize="50sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:id="@+id/studytime_all"
            android:gravity="center"
            android:textSize="60sp"
            android:text="00:00:00"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#d8874e"/>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="목표 공부시간"
            android:gravity="center"
            android:textSize="50sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="00:00:00"
            android:id="@+id/studytime_only"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_weight="2"
            android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:id="@+id/studyTimePercent"
                android:layout_weight="2"
                android:textSize="40sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표시간 설정"
                android:id="@+id/setStudyTime"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#d8874e"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="20sp"
            android:background="#ffb000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="타이머 시작"
            android:id="@+id/studytime_all_btn"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>
        <Button
            android:layout_marginTop="20sp"
            android:background="#ffb000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="초기화"
            android:id="@+id/temp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textSize="10sp"
        android:id="@+id/recordtext"/>

</LinearLayout>
