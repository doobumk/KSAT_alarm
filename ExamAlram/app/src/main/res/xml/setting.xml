<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="종료 음성 및 진동 설정">
        <SwitchPreference
            android:defaultValue="true"
            android:key="end"
            android:summary="종료 알림 음성을 키고 끌수 있습니다."
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="종료 알림 ON/OFF"/>
        <SwitchPreference
            android:defaultValue="true"
            android:key="vibrate"
            android:summary="진동을 키고 끌수 있습니다."
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="진동 ON/OFF"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="화면 설정">
        <SwitchPreference
            android:defaultValue="true"
            android:key="bright"
            android:summary="어플리케이션 실행중 화면이 꺼지지 않게 합니다"
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="화면 ON/OFF"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="정보">
        <Preference
            android:summary="개발자에게 메일을 보냅니다"
            android:title="메일 보내기" >
            <intent
                android:action="android.intent.action.SENDTO"
                android:data="mailto:doobumk@gmail.com" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>