<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="종료/5분전 음성 및 진동 설정">
        <SwitchPreference
            android:defaultValue="true"
            android:key="end"
            android:summary="종료 알림 음성을 키고 끌수 있습니다."
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="종료 알림 ON/OFF"/>
        <SwitchPreference
            android:defaultValue="true"
            android:key="five"
            android:summary="5분전 알림 음성을 키고 끌수 있습니다."
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="진동 ON/OFF"/>
        <SwitchPreference
            android:defaultValue="true"
            android:key="vibrate"
            android:summary="진동을 키고 끌수 있습니다."
            android:switchTextOff="OFF"
            android:switchTextOn="ON"
            android:title="5분전 ON/OFF"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="자동 업데이트">
    <SwitchPreference
        android:defaultValue="true"
        android:key="autoUpdate"
        android:summary="자동 업데이트를 설정합니다"
        android:switchTextOff="OFF"
        android:switchTextOn="ON"
        android:title="자동 업데이트" />
    </PreferenceCategory>
    <PreferenceCategory android:title="정보">
        <Preference
            android:summary="개발자에게 메일을 보냅니다"
            android:title="메일 보내기" >
            <intent
                android:action="android.intent.action.SENDTO"
                android:data="mailto:doobumk@gmail.com" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>